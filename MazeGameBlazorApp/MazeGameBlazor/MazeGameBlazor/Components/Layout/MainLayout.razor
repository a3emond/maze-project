@inherits LayoutComponentBase

<div class="main-layout">
    <!-- Header -->
    <header class="header">
        <h1>Maze Game Project</h1>
        <p class="tagline">Algorithm's Course - Winter 2025</p>
    </header>

    <!-- Navbar -->
    <nav class="navbar">
        <ul>
            <li>
                <NavLink href="/" Match="NavLinkMatch.All" class="nav-button">
                    <i class="fas fa-home"></i> Home
                </NavLink>
            </li>
            <li>
                <NavLink href="/game" class="nav-button">
                    <i class="fas fa-gamepad"></i> Play Game
                </NavLink>
            </li>
            <li>
                <NavLink href="/blog" class="nav-button">
                    <i class="fas fa-book-open"></i> Blog
                </NavLink>
            </li>
            <li>
                <a href="https://github.com/a3emond/maze-project" class="nav-button github-button" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-github"></i> GitHub
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="content">
        @Body
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 Maze Game Project. All rights reserved. Alexandre Emond</p>

    </footer>
</div>

